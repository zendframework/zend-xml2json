{
    "name": "zendframework/zend-xml2json",
    "description": "Provides functionality for converting XML to JSON, optionally including XML attributes",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf2",
        "json",
        "xml"
    ],
    "homepage": "https://github.com/zendframework/zend-xml2json",
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev",
            "dev-develop": "3.1-dev"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-json": "^2.6.1 || ^3.0",
        "zendframework/zendxml": "^1.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.22 || ^6.4.1",
        "zendframework/zend-coding-standard": "~1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Zend\\Xml2Json\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZendTest\\Xml2Json\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf fix -v",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    }
}
